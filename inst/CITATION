     citHeader("To cite in a publication please use:")
     
     year <- "submitted"
     vers <- paste("R package version", meta$Version)
     
     citEntry(entry = "Manual",
              title = "Morphological phylogenetic analysis with inapplicable data",
              author = personList(as.person("Martin D. Brazeau"), as.person("Thomas Guillerme"), as.person("Martin R. Smith")),
              year = year,
              note = vers,
     
              textVersion =
              paste0("Brazeau, Guillerme & Smith (2017). ",
                     "Morphological phylogenetic analysis with inapplicable data. BioRxiv",
                     ", doi: 10.1101/209775"))